version: '3.8'

services:
  metabase:
    image: metabase/metabase:latest
    ports:
      - "3000:3000"
    environment:
      MB_DB_TYPE: h2
      MB_DB_FILE: /metabase-data/metabase.db
      MB_JAVA_TIMEZONE: UTC
    volumes:
      - metabase-data:/metabase-data
    restart: always

volumes:
  metabase-data:
